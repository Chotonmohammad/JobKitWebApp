
@{
    ViewBag.Title = "Payment Procedure";
    Layout = "~/Views/Shared/_user_layout.cshtml";
}

<section class="ftco-section ftco-counter">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2 class="mb-1"><span>Payment </span>Procedure</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 ftco-animate">
                <ul class="category">
                    <li><a href="~/Users/PaymentProcedure" style="color:white; background-color:#5dd28e">Payment Procedure</a></li>
                </ul>
            </div>
            <div class="col-md-9 ftco-animate">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "p-5 bg-white" }))
                {
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="font-weight-bold" for="fullname">Payment Procedure</label>
                            <p class="mb-0 font-weight-bold" style="color:green">
                                1. Please ask the payment method from <span style="color:red">freelancer</span>

                            </p>

                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
