@model JobKitWebApp.Models.User

@{
    ViewBag.Title = "ProfileInfo";
    Layout = "~/Views/Shared/_user_layout.cshtml";
}



@if (ViewBag.ProfileNotFoundMsg == null)
{
    <section class="ftco-section bg-light ">

        <div class="container">
            <div class="p-4 mb-3 bg-white shadow" role="alert">
                <center><a class="btn btn-primary">Client Profile</a></center>
            </div>

            <div class="row ">

                <div class="col-md-12 col-lg-8">

                    <form action="#" class="p-5 bg-white shadow">

                        <div class="row form-group mb-5">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" for="fullname">Name</label>
                                <input type="text" id="fullname" class="form-control" placeholder="Name" value="@Model.Name" readonly>
                            </div>
                        </div>
                        @*<div class="row form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Post" class="btn btn-primary  py-2 px-5">
                                </div>
                            </div>*@
                    </form>
                </div>

                <div class="col-lg-4">
                    <div class="p-4 mb-3 bg-white shadow">
                        <h3 class="h5 text-black mb-3">Contact Info</h3>

                        <p class="mb-0 font-weight-bold">Phone</p>
                        <p class="mb-4"><a href="#">@Model.Phone</a></p>

                        <p class="mb-0 font-weight-bold">Email Address</p>
                        <p class="mb-4"><a href="#">@Model.Email</a></p>

                    </div>

                </div>
            </div>

        </div>
    </section>
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Portfolio</span>
                    <h2 class="mb-4"><span>Posted</span> Jobs</h2>
                </div>
            </div>
            @if (ViewBag.RecentJobs != null)
            {
                <div class="row">

                    @foreach (var item in ViewBag.RecentJobs)
                    {
                        <div class="col-md-12 ftco-animate">
                            <div class="job-post-item bg-white p-4 d-block d-md-flex align-items-center">
                                <div class="mb-4 mb-md-0 mr-5">
                                    <div class="job-post-item-header d-flex align-items-center">
                                        <h2 class="mr-3 text-black h3">@item.JobTitle</h2>
                                        <div class="badge-wrap">
                                            <span class="bg-primary text-white badge py-2 px-3">@item.JobType.JobTypeName</span>
                                        </div>
                                    </div>
                                    <div class="justify-content-center">
                                        <p class="justify-content-between">@item.JobDescription</p>
                                    </div>
                                    <div class="badge-wrap">
                                        <span class="bg-success text-white badge py-2 px-3 mb-2">BUDGET: BDT @item.Budget</span>
                                    </div>
                                    <div class="job-post-item-body d-block d-md-flex">
                                        <div class="mr-3"><span class="icon-layers"></span> <a href="#">@item.User.Name</a></div>
                                        <div class="mr-3"><span class="icon-my_location"></span> <span>@item.City.CityName</span></div>
                                        <div><span class="icon-add_alert"></span> <span>@item.FreelancerCategory.FreelancerCategoryName</span></div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:@item.WorkProgess%">
                                            @item.WorkProgess% complete
                                        </div>
                                    </div>
                                </div>
                                @*<div class="ml-auto d-flex">
                                    <a href="~/Findworks/ApplyJob?JobId=@item.JobId" class="btn btn-primary py-2 mr-1">Submit Proposal</a>
                                </div>*@
                            </div>
                        </div>

                    }
                </div>
            }
        </div>
    </section>
}
else
{
    <section class="ftco-section bg-light ">

        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">

                    <p class="btn btn-primary py-2 mr-1 shadow">@ViewBag.ProfileNotFoundMsg</p>
                </div>

            </div>
        </div>
    </section>

}





