@model JobKitWebApp.Models.Freelancer
@{
    ViewBag.Title = "Connects";
}


<section class="ftco-section ftco-counter">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2 class="mb-1"><span>Profile</span> Settings</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 ftco-animate">
                <ul class="category">
                    <li><a href="~/Settings/ProfileIntroduction">Profile Introduction</a></li>
                    <li><a href="~/Freelancers/ProfileInfo">My Profile</a></li>
                    <li><a href="~/Settings/ContactInfo">Contact Info</a></li>
                    <li><a href="~/Settings/Connects"  style="color:white; background-color:#5dd28e">Connects</a></li>
                </ul>
            </div>
            <div class="col-md-9 ftco-animate">

                <div class="p-4 mb-2 bg-white">
                    <h3 class="h5 text-black mb-3">Connects</h3>
                    <p class="mb-0 font-weight-bold" style="color:green">You have <span style="color:red">@Model.TotalConnect</span> Connects remaining.</p>
                    <p class="mb-0 font-weight-bold" style="color:green">Do you want to add more connects? <a href="~/Settings/Add_Connects" class="text-primary">click here</a></p>

                </div>
                <div class="p-4 mb-0 bg-white">
                    <h3 class="h5 text-black mb-3">Connects Purchase Info</h3>
                    <!--Table-->
                    <table class="table table-striped" id="c_table">

                        <!--Table head-->
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Connect Pricing</th>
                                <th>Reference</th>
                                <th>Payment Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <!--Table head-->
                        <!--Table body-->
                        <tbody>
                            @{ int count = 0;}
                            @foreach (var item in ViewBag.Connects)
                            {
                                { count += 1; }

                                if (count % 2 == 1)
                                {
                                    <tr class="table-info">
                                        <th scope="row">@count</th>
                                        <td>@item.ConnectPricing.NumberOfConnect Connects - BDT @item.ConnectPricing.Price</td>
                                        <td>@item.Refernce</td>
                                        @if (item.PaymentStatus==1)
                                        {
                                        <td>Completed</td>
                                        }
                                        else
                                        {
                                        <td>Pending</td>
                                        }
                                        <td>Click here to see <a href="~/Settings/Payment_Procedure?connect_id=@item.ConnectId">Payment Procedure</a></td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ConnectPricing.NumberOfConnect Connects - BDT @item.ConnectPricing.Price</td>
                                        <td>@item.Refernce</td>
                                        @if (item.PaymentStatus==1)
                                        {
                                        <td>Completed</td>
                                        }
                                        else
                                        {
                                        <td>Pending</td>
                                        }
                                        <td>Click here to see <a href="~/Settings/Payment_Procedure?connect_id=@item.ConnectId">Payment Procedure</a></td>
                                    </tr>
                                }

                                    }
                        </tbody>
                        <!--Table body-->


                    </table>
                    <!--Table-->
                </div>
            </div>
        </div>
    </div>
</section>
