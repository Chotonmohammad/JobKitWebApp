@model IEnumerable<JobKitWebApp.Models.ApplyJob>

@{
    List<JobKitWebApp.Models.ApplyJob> applyjobs = (List<JobKitWebApp.Models.ApplyJob>)Model;
    ViewBag.Title = "My Jobs";
}

@if (applyjobs.Count > 0)
{
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    @*<span class="subheading">Recently Added Jobs</span>*@
                    <h2 class="mb-4"><span>My</span> Jobs</h2>
                </div>
            </div>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-12 ftco-animate">
                        <div class="job-post-item bg-white p-4 d-block d-md-flex align-items-center">
                            <div class="mb-4 mb-md-0 mr-5">
                                <div class="job-post-item-header d-flex align-items-center">
                                    <h2 class="mr-3 text-black h3">@item.Job.JobTitle</h2>
                                    <div class="badge-wrap">
                                        <span class="bg-primary text-white badge py-2 px-3">@item.Job.JobType.JobTypeName</span>
                                        @if (item.JobConfirmFlag == 1)
                                        {
                                            <span class="bg-success text-white badge py-2 px-3">Job Win</span>
                                        }
                                        else
                                        {
                                            <span class="bg-warning text-white badge py-2 px-3">Pending</span>

                                        }
                                    </div>
                                </div>
                                <div class="justify-content-center">
                                    <p class="justify-content-between">@item.Job.JobDescription</p>
                                </div>
                                <div class="badge-wrap">
                                    <span class="bg-success text-white badge py-2 px-3 mb-2">BUDGET: BDT @item.Job.Budget</span>
                                </div>
                                <div class="job-post-item-body d-block d-md-flex">
                                    <div class="mr-3"><span class="icon-layers"></span> <a href="#">@item.Job.User.Name</a></div>
                                    <div class="mr-3"><span class="icon-my_location"></span> <span>@item.Job.City.CityName</span></div>
                                    <div><span class="icon-add_alert"></span> <span>@item.Job.FreelancerCategory.FreelancerCategoryName</span></div>
                                </div>
                                <div class="job-post-item-body d-block d-md-flex mt-2">
                                    <div class="mr-3"><h5>My Cover Message</h5></div>

                                    <div class="mr-3"><p>@item.CoverMessage</p></div>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:@item.Job.WorkProgess%">
                                        @item.Job.WorkProgess% complete
                                    </div>
                                </div>
                            </div>
                            <div class="ml-auto d-flex">
                                @if (item.JobConfirmFlag > 0)
                                {
                                    <a href="~/Inbox/FreelancerReply?jobApplyId=@item.ApplyJobId" class="btn btn-primary py-2 mr-1">Inbox</a>

                                    <a href="~/Jobs/WorkUpdate?JobId=@item.Job.JobId" class="btn btn-primary py-2 mr-1">Work Update</a>

                                }
                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>
    </section>
}
else
{
    <div class="ftco-section bg-light">
        <div class="container">
            <div class="p-4 mb-1 bg-white shadow">
                <section class="ftco-section-parallax">
                    <div class="parallax-img d-flex align-items-center">
                        <div class="container">
                            <div class="row d-flex justify-content-center">
                                <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                                    <h2 style="font-size:30px">No Jobs Found</h2>
                                    <center><a href="~/FindWorks/Index" class="btn btn-success" style="color:white">Find More Work?</a></center>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
